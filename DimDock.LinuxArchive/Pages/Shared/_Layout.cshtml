@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @if(@ViewBag.UserScalable)
    {
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    }
    else
    {
        <meta name="viewport" content="width=device-width, user-scalable=no">
    }
    <title>@ViewData["Title"] - RicyArt</title>
    <link rel="stylesheet" href="@Configuration.GetSection("AppConfig")["Subdirectory"]/css/dimdock.css" />
</head>
<body>
    <header class="smallText">
        @if(@ViewBag.ShowNavigation)
        {
        <div style="padding:10px;">
            <a href="@Configuration.GetSection("AppConfig")["Subdirectory"]">Home</a>
            @if (ViewBag.SketchNavigation)
            {
                @("|")
                <a href="@Configuration.GetSection("AppConfig")["Subdirectory"]/Sketch/">Sketch Archive Home</a>
                <!--
        @("|")
        <a href="@Configuration.GetSection("AppConfig")["Subdirectory"]/Sketch/Custom/">Custom</a>
        @("|")
        <a href="@Configuration.GetSection("AppConfig")["Subdirectory"]/Sketch/About/">About</a>
            -->
            }
            else
            {
                @("|")
                <a href="@Configuration.GetSection("AppConfig")["Subdirectory"]/Sketch/">Sketch Archive (NSFW)</a>
            }
        </div>
        }
    </header>

    <div>
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>

</body>
</html>
